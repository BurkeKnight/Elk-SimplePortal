<package-info xmlns="http://www.elkarte.net/site/package-info" xmlns:elk="http://www.elkarte.net/">
	<id>[SiNaN]:SimplePortal</id>
	<name>SimplePortal</name>
	<version>2.4</version>
	<type>modification</type>
	<install for="1.0 Alpha - 1.0.99">
		<readme type="inline">This will install SimplePortal 2.4 for Elkarte.</readme>
		<modification>modification.xml</modification>
		<require-file name="PortalStandalone.php" destination="BOARDDIR" />
		<require-dir name="sources" destination="BOARDDIR" />
		<require-dir name="admin" destination="BOARDDIR" />
		<require-dir name="subs" destination="BOARDDIR" />
		<require-dir name="Themes" destination="BOARDDIR" />
		<database>database.php</database>
		<hook hook="integrate_theme_include" file="LANGUAGEDIR/SPortal.english.php" />
		<hook hook="integrate_load_theme" function="sportal_init" file="SUBSDIR/Portal.subs.php" />
		<hook hook="integrate_actions" function="sp_integrate_actions" file="SUBSDIR/PortalIntegration.subs.php" />
		<hook hook="integrate_admin_areas" function="sp_integrate_admin_areas" file="SUBSDIR/PortalIntegration.subs.php"/>
		<redirect url="$scripturl?action=admin;area=portalconfig" timeout="5000" parsebbc="true">redirect</redirect>
	</install>
	<uninstall for="1.0 - 1.0.99">
		<readme type="inline">This will uninstall SimplePortal 2.4 for Elkarte.</readme>
		<hook reverse="true" hook="integrate_theme_include" file="LANGUAGEDIR/SPortal.english.php" />
		<hook reverse="true" hook="integrate_load_theme" function="sportal_init" />
		<hook reverse="true" hook="integrate_actions" function="sp_integrate_actions" />
		<hook reverse="true" hook="integrate_admin_areas" function="sp_integrate_admin_areas" />
		<modification reverse="true">modification.xml</modification>
		<remove-file name="BOARDDIR/PortalStandalone.php" />
		<remove-file name="SOURCEDIR/PortalArticles.php" />
		<remove-file name="SOURCEDIR/PortalBlocks.php" />
		<remove-file name="SOURCEDIR/PortalMain.php" />
		<remove-file name="SOURCEDIR/PortalPages.php" />
		<remove-file name="SOURCEDIR/PortalShoutbox.php" />
		<remove-file name="ADMINDIR/PortalAdminArticles.php" />
		<remove-file name="ADMINDIR/PortalAdminBlocks.php" />
		<remove-file name="ADMINDIR/PortalAdminMain.php" />
		<remove-file name="ADMINDIR/PortalAdminPages.php" />
		<remove-file name="ADMINDIR/PortalAdminShoutbox.php" />
		<remove-file name="SUBSDIR/Portal.subs.php" />
		<remove-file name="SUBSDIR/PortalIntegration.subs.php" />
		<remove-file name="SUBSDIR/PortalAdmin.subs.php" />
		<remove-file name="$themedir/Portal.template.php" />
		<remove-file name="$themedir/PortalArticles.template.php" />
		<remove-file name="$themedir/PortalPages.template.php" />
		<remove-file name="$themedir/PortalShoutbox.template.php" />
		<remove-file name="$themedir/PortalAdmin.template.php" />
		<remove-file name="$themedir/PortalAdminArticles.template.php" />
		<remove-file name="$themedir/PortalAdminBlocks.template.php" />
		<remove-file name="$themedir/PortalAdminPages.template.php" />
		<remove-file name="$themedir/PortalAdminShoutbox.template.php" />
		<remove-file name="LANGUAGEDIR/SPortal.english.php" />
		<remove-file name="LANGUAGEDIR/SPortal.english-utf8.php" />
		<remove-file name="LANGUAGEDIR/SPortalAdmin.english.php" />
		<remove-file name="LANGUAGEDIR/SPortalAdmin.english-utf8.php" />
		<remove-file name="LANGUAGEDIR/SPortalHelp.english.php" />
		<remove-file name="LANGUAGEDIR/SPortalHelp.english-utf8.php" />
		<remove-dir name="$imagesdir/sp" />
		<remove-file name="$imagesdir/admin/configuration.png" />
		<remove-file name="$imagesdir/admin/articles.png" />
		<remove-file name="$imagesdir/admin/blocks.png" />
		<remove-file name="$imagesdir/admin/categories.png" />
		<remove-file name="$imagesdir/admin/pages.png" />
		<remove-file name="$imagesdir/admin/shoutbox.png" />
		<remove-file name="$themedir/css/portal.css" />
		<remove-file name="$themedir/css/portal_rtl.css" />
		<remove-file name="$themedir/scripts/portal.js" />
	</uninstall>
</package-info>